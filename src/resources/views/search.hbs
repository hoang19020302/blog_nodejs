<div class="mt-4">
    <form method="GET" action="/courses" id="course-search-form">
        <div class="form-group" aria-roledescription="">
            <label for="search-input">Họ và tên</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="VD: Nguyễn Văn A">
        </div>

        <div class="form-group" aria-roledescription="">
            <label for="search-input">Danh sách khoá học</label>
            <select name="courses" class="form-control" id="course-input">
                <option value="">----Khoá học----</option>
                {{#each courses}}
                    <option value="{{this.slug}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script type="text/javascript" src="/js/search.js"></script>
